{
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "build-all",
            "args": ["run", "build-all"],
            "isBuildCommand": true
        },
        {
            "taskName": "build-client",
            "args": ["run", "build-client"]
        },
        {
            "taskName": "build-server",
            "args": ["run", "build-server"]
        },
        {
            "taskName": "build-server-tests",
            "args": ["run", "build-tests"]
        },
        {
            "taskName": "test",
            "args": ["run", "test"],
            "isTestCommand": true
        },
        {
            "taskName": "test-client-lib",
            "args": ["run", "test-client-lib"]
        },
        {
            "taskName": "test-client-app",
            "args": ["run", "test-client-app"]
        },
        {
            "taskName": "test-server",
            "args": ["run", "test-server"]
        },
        {
            "taskName": "start",
            "args": [
                "start"
            ],
            "isBackground": true
        },
        {
            "taskName": "watch-client",
            "args": [
                "run",
                "watch-client"
            ],
            "isBackground": true
        }
    ]
}